{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "src/2d/**/*",
    "src/3d/**/*",
    "src/dom/**/*",
    "src/interafces/**/*",
    "src/mixins/**/*",
    "src/model/**/*",
    "src/utils/**/*",
    "src/lib.internal.d.ts",
    "src/lib.d.ts",
    "src/i2d.ts",
    "src/i3d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "demo/**/*.ts"
  ]
}