{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "sourceMap": false,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [
    "src/2d/**/*",
    "src/3d/**/*",
    "src/dom/**/*",
    "src/interafces/**/*",
    "src/mixins/**/*",
    "src/model/**/*",
    "src/utils/**/*",
    "src/lib.internal.d.ts",
    "src/lib.d.ts",
    "src/index.ts"
  ]
}